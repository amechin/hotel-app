{% extends 'base.html.twig' %}

{% block title %}HOTEL FLORIDA{% endblock %}

{% block body %}
    <div class="uk-section uk-section-default uk-margin-medium-top uk-light uk-background-cover" style="background-image: url('https://images.unsplash.com/photo-1535205148555-bcbbc2a78913?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1074&q=80')">
        <div class="uk-container uk-flex uk-flex-center" >
                <a class="uk-button uk-button-default uk-button-large uk-display-inline-block uk-width-1-3" href="{{ path('app_room_new') }}">Ajouter une chambre</a>
        </div>
    </div>
    <div class="uk-container uk-flex uk-flex-center uk-margin-medium">
        <span uk-icon="thumbnails" class="uk-text-muted "></span>
    </div>
    <div class="uk-container">
        <div class="uk-grid-collapse uk-grid-small uk-grid-match uk-flex-center" uk-grid>
            {% for room in rooms %}
                <div class="uk-card uk-card-default uk-background-default uk-card-small uk-width-1-4@m uk-width-1-2@s uk-flex-first">
                    <div class="uk-card-media-top">
                        <div uk-lightbox>
                            <a href="{{ asset('uploads/' ~ room.pict()) }}" data-alt="{{ room.pict() }}">
                                <img src="{{ asset('uploads/' ~ room.pict()) }}" width="1800" height="1200" style="height: 200px;">
                            </a>
                        </div>

                    </div>
                    <div class="uk-card-body uk-padding-remove">
                        <p class="uk-card-title uk-text-muted uk-text-center uk-text-lighter uk-margin-top uk-margin-remove-bottom">{{ room.title }}</p>
                        <p class="uk-text-normal uk-text-justify uk-padding-small uk-margin-remove">{{ room.description }}</p>
                        <div class="uk-button-group uk-width-1-1">
                            <a href="{{ path('app_room_show', {'id': room.id}) }}" class="uk-button uk-button-default uk-width-1-2">Visualiser</a>
                            <a href="{{ path('app_room_edit', {'id': room.id}) }}" class="uk-button uk-button-default uk-width-1-2">Editer</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p>Pas de chambres disponibles</p>
            {% endfor %}
        </div>
    </div>



    <div class="uk-container uk-flex uk-flex-center uk-margin-medium">
        <span uk-icon="thumbnails" class="uk-text-muted "></span>
    </div>

    <div class="uk-section uk-section-default uk-margin uk-dark uk-background-cover uk-preserve-color" style="background-image: url('https://images.unsplash.com/photo-1551286928-31d81ce0f80d?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1169&q=80')">

    </div>

{% endblock %}
